<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.confluence.gotham.pkscout.mod"
  version="1.0.0"
  name="Confluence Gotham Mods by pkscout"
  provider-name="pkscout|Jezz_X (original), Team XBMC (original)">
	<requires>
		<import addon="xbmc.gui" version="5.0.0"/>
		<import addon="script.module.cmpl" version="1.0.0">
	</requires>
	<extension point="xbmc.addon.repository" name="Add on Beta channel and skin modifications">
		<info compressed="true">http://raw.github.com/pkscout/repository.pkscout/gotham/addons.xml</info>
		<checksum>http://raw.github.com/pkscout/repository.pkscout/gotham/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/pkscout/repository.pkscout/gotham/download</datadir>
		<hashes>false</hashes>
	</extension>
	<extension
	  point="xbmc.gui.skin"
	  defaultthemename="textures.xbt"
	  debugging="false"
	  effectslowdown="0.75">
		<res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="af">A set of modifications to the default Confluence skin</summary>
		<description lang="en">These are a set of mods to the default Confluence skin.  Please see the changelog for a detailed list of the modifications.</description>
		<disclaimer lang="en">These mods are only lightly supported.</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
